<% include ./partials/header.ejs %>
<div class="main h-screen w-full flex justify-center items-center bg-zinc-300">
  <div class="w-[28vw] bg-white border-2 rounded-[30px] px-8 py-8">
    <h1
      class="text-2xl leading-none tracking-tighter text-center capitalize font-semibold mb-3"
    >
      Welcome to MySocial
    </h1>

    <form action="/login" method="post">
      <input
        class="block mt-4 border-2 rounded w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="block mt-4 border-2 rounded w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <a class="inline-block mt-2 font-semibold" href="#">Forgot password</a>
      <input
        class="block mt-4 rounded w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer"
        type="submit"
        name="submit"
        value="LogIn"
      />
      <p class="leading-[.9] text-center text-zinc-700 mx-auto text-sm mt-5">
        By continuing,
        <span class="font-semibold"> you agree to Pinterest'</span>s Terms of
        Service; Opens a new tab and acknowledge that you've read our Privacy
        Policy; Notice at collection;
      </p>

      <a href="/register" class="text-center font-semibold mx-auto mt-5"
        >DO You not have an account?</a
      >
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>
